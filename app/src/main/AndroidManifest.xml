<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cookhub">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Cookhub">
        <activity
            android:name=".burger_menu.ui.personal_data.PersonalDataActivity"
            android:exported="false" />
        <activity
            android:name=".burger_menu.ui.logout.SignOutActivity"
            android:exported="true" />
        <activity
            android:name=".burger_menu.ui.invite_friends.InviteFriendsActivity"
            android:exported="true">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".burger_menu.ui.rating.RatingActivity"
            android:exported="true"/>


        <activity
            android:name=".user_profile.UserProfileActivity"
            android:exported="false" />
        <activity
            android:name=".ToSignUpActivity"
            android:exported="true" />
        <activity
            android:name=".forgot.ForgotPasswordActivity"
            android:exported="true" />
        <activity
            android:name=".burger_menu.MainMenuActivity"
            android:exported="true"
            android:label="@string/title_activity_main_menu"
            android:theme="@style/Theme.Cookhub.NoActionBar" />
        <activity
            android:name=".ToSignInActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".SignedInActivity"
            android:exported="true" />
    </application>

</manifest>